# Configurações do Banco de Dados
DATABASE_URL="postgresql://username:password@localhost:5432/telegram_bot_saas"

# Configurações Redis
REDIS_URL="redis://localhost:6379"

# Configurações da Aplicação
NODE_ENV="development"
PORT=3333
API_URL="http://localhost:3333"

# Segurança JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Criptografia
ENCRYPTION_KEY="32-character-encryption-key-here"

# Telegram
TELEGRAM_WEBHOOK_DOMAIN="https://your-domain.com"

# Gateway de Pagamento - MercadoPago
MERCADOPAGO_ACCESS_TOKEN="TEST-your-mercadopago-access-token"
MERCADOPAGO_PUBLIC_KEY="TEST-your-mercadopago-public-key"
MERCADOPAGO_WEBHOOK_SECRET="your-webhook-secret"

# Email SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="noreply@yourdomain.com"
SMTP_PASS="your-email-password"

# Armazenamento de Arquivos (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET="telegram-bot-manager-files"

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_DELAY=0

# Logs
LOG_LEVEL="info"
LOG_TO_FILE=true

# Monitoramento
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Analytics
GA_TRACKING_ID="G-XXXXXXXXXX"

# Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR=false

# Desenvolvimento
DEBUG="app:*"
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true